<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.NoteTypeActivity">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/light_yellow"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnBack"
            android:src="@drawable/button_back"
            android:layout_height="match_parent"
            android:layout_gravity="start|center_vertical"
            android:layout_width="0dp"
            android:layout_weight="2"  />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="wrap_content"
            android:id="@+id/twNotification"
            android:textSize="20sp"
            android:layout_gravity="start|center_vertical"
            android:gravity="center|center_vertical"
            android:textColor="@android:color/holo_red_dark"
            android:text="@string/example" />
    </LinearLayout>

    <TextView
        android:id="@+id/twNoteType"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="@string/example"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/twNoteTypeName"
            android:gravity="start|center_vertical"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/pencil"
            android:text="@string/example"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:background="@drawable/edit_text_rounded_corners"
            android:paddingStart="20dp"
            android:paddingEnd="20dp" />

        <View
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnEdit"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:text="@string/example"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <View
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="6" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:text="@string/example"/>

    </LinearLayout>

    <ScrollView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayoutNotes"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>

</LinearLayout>